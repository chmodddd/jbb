# Izinkan .cgi dan .pl dijalankan sebagai script
AddHandler cgi-script .cgi .pl
Options +ExecCGI

# Arahkan semua permintaan ke index.cgi (untuk clean URL)
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Jika file atau direktori tidak ada, teruskan ke index.cgi
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.cgi/$1 [L,QSA]
</IfModule>

# Set default index file
DirectoryIndex index.html index.php index.cgi

# Izinkan PHP dieksekusi di .html (jika server mendukung)
AddType application/x-httpd-php .html .htm


# Jika pakai Perl FastCGI (opsional)
<IfModule mod_fcgid.c>
  AddHandler fcgid-script .fcgi
  Options +ExecCGI
</IfModule>
